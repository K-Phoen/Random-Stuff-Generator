<script type="text/javascript">
    var getUser = function() {
        var url = '{{ app.url_generator.generate('users_single', {}, true) }}';
        // Get dat info
        var output = $.ajax({
            // Check if a seed parameter is passed.
            url: url,
            dataType: 'json',
            success: function(r) {
                $('#avatar').attr('src', r.results.picture_thumb);
                $('.user_first_name').html(r.results.name.first);
                $('.user_last_name').html(r.results.name.last);
                //$('.gen_gender').html(r.results.gender);
                $('.user_email').html(r.results.email);
                $('.user_seed').html(r.results.seed);
                $('.user_birthdate').html(r.results.birthday);
                $('.user_street').html(r.results['location'].street);
                $('.user_state').html(r.results['location'].state);
                $('.user_city').html(r.results['location'].city);
                $('.user_zip').html(r.results['location'].zip);
                $('.user_picture').html(r.results.picture);
                $('.user_picture_thumb').html(r.results.picture_thumb);
                $('.user_password').html(r.results.password);
                $('.gen_profile_url').html("<a href="+r.results.picture+">"+r.results.picture+"</a>");
                $('#user_url').html(url+'<span>?seed='+r.results.seed+'</span>');
            }
        });
    };

    getUser();

    $('#refresh').click(function(){
        $(this).removeClass('spin').addClass('spin');
        getUser();
    });

    $('#toggle').click(function(){
        $('#hidden').toggle(250);
    });
</script>
